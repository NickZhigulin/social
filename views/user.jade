html(ng-app="user")
    head(lang='en')
        meta(charset='UTF-8')
        title
        link(rel='stylesheet', href='/css/user.css')
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        script(src='/js/jquery-2.1.3.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/angular.min.js')
        script(src='/js/angular-route.js')
        script(src="/socket.io/socket.io.js")
        script(src='/js/user.js')
    body.container-fluid(ng-controller="page")
        .row
            .col-md-12.head
                .headtext
                    |Welcome to the {{user.nickname}}'s Wonderland!
                    button.search(ng-click="Sch = 'vis'")
                        |Search
        .row
            .menuAll
                .menu.top
                a(href="", ng-click="home()")
                    .menu.button
                        | Home page
                a(href="", ng-click="friends()")
                    .menu.button
                        | Friends
                a(href="", ng-click="chatrooms()")
                    .menu.button
                        | Chatrooms
                a(href="", ng-click="alboms()")
                    .menu.button
                        | Alboms
                a(href="", ng-click="news()")
                    .menu.button
                        | News
                .menu.bottom
            .center
                .center.topp
                .lenta
                    .block(ng-repeat="text in news")
                        .nick
                            |{{user.nickname}}:
                        br
                        .news
                            |{{news[$index].text}}
                        img.separator(src="/img/block_bot.png")
                .center.bot
            .avatarAll
                img.frame(src="/img/frame_avatar.png")
                .avatar
                    img(ng-src="{{user.avatar}}")
                .avatarMenu
                    .menu.top
                    a(href="", ng-click="_friend()")
                        .menu.button
                            .text
                                |{{friend}}
                    a(href="", ng-click="sendmess()")
                        .menu.button
                            .text
                                |Send message
                    .menu.bottom
            .addNews.hidd(ng-class="add")
                textarea(type="text", class="form-control", rows="5", placeholder="Input your text...", ng-model='mess')
                button.btn.btn-default(ng-click="sendNews()")
                    | Submit
                button.btn.btn-default(ng-click="add='hidd'")
                    | Cancel
            .searchWindow.hidd(ng-class="Sch")
                .topText
                    | Input name for search
                input.input(type="text" ng-model="search")
                .result(ng-repeat="name in find" ng-click="friend(find[$index].name)")
                    img.findAvatar(ng-src="{{find[$index].avatar}}")
                    | {{find[$index].name}}
                button.btn.btn-default(ng-click="_search()")
                    | OK
                button.btn.btn-default(ng-click="Sch='hidd'")
                    | Cancel