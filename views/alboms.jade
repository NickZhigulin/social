html(ng-app="alboms")
    head(lang='en')
        meta(charset='UTF-8')
        title
        link(rel='stylesheet', href='/css/alboms.css')
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        script(src='/js/jquery-2.1.3.min.js')
        script(src='/js/underscore.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/angular.min.js')
        script(src='/js/angular-route.js')
        script(src="/socket.io/socket.io.js")
        script(src='/js/alboms.js')
    body.container-fluid(ng-controller="page")
        .row
            .head
                .headtext
                    |Welcome to Wonderland, {{user.nickname}}!
                    button.search(ng-click="Sch = 'vis'")
                        |Search
        .row
            .menuAll
                .menu.top
                a(href="/home")
                    .menu.button
                        | Home page
                a(href="/friends")
                    .menu.button
                        |Friends
                a(href="/chat")
                    .menu.button
                        |Chatrooms
                 a(href="/alboms")
                    .menu.button
                        |Alboms
                 a(href="/news")
                    .menu.button
                        |News
                .menu.bottom
            .center
                .center.topp
                    button.added.up.none(ng-class="vissAlbom", ng-click="up()")
                        |UP
                    button.added(ng-click="_add()")
                        |{{add}}
                .alboms
                    .albom(ng-class="vissAlboms",ng-click="albo(alboms[$index].name)", ng-repeat="name in alboms")
                        .close.glyphicon.glyphicon-remove(ng-click="closeAlbom(alboms[$index].name)")
                        .name
                            |{{alboms[$index].name}}:
                        img.folder(src="/img/folder.png")
                    .albom.none(ng-class="vissAlbom", ng-repeat="name in albom")
                        .close.glyphicon.glyphicon-remove(ng-click="closePicture(albom[$index].name)")
                        img.folder(ng-src="{{albom[$index].picture}}")
                .center.bot
            .avatarAll
                img.frame(src="/img/frame_avatar.png" ng-click="clickavatar='vis'")
                .avatar
                    img(ng-src="{{user.avatar}}")
        .searchWindow.hidd(ng-class="Sch")
            .topText
                |Input name for search
            input.input(type="text" ng-model="search")
            a(href='user/{{find[$index].name}}', ng-repeat="name in find")
                .result
                    img.findAvatar(ng-src="{{find[$index].avatar}}")
                    |{{find[$index].name}}
            button.btn.btn-default(ng-click="_search()")
                | OK
            button.btn.btn-default(ng-click="Sch='hidd'")
                | Cancel
        .addAlbom.hidd(ng-class="addWind")
            .topText
                |Input name for albom
            input.input(type="text" ng-model="nameAlbom")
            button.btn.btn-default(ng-click="addAlbom()")
                | OK
            button.btn.btn-default(ng-click="addWind='hidd'")
                | Cancel
        .addPicture.hidd(ng-class="uploadWind")
            .text
                |Upload a new photo
                br
                |Size of your foto
                br
                |should be 240x270 px
            form.post(enctype='multipart/form-data', action='{{activeAlbom}}', method='post')
                input.file(type='file', name="picture")
                input.but(type='submit', value='Upload Image', name='submit')
                button.but(type="button" ng-click="cancel()")
                    |Cancel