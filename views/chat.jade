html(ng-app="chat")
    head(lang='en')
        meta(charset='UTF-8')
        title
        link(rel='stylesheet', href='/css/chat.css')
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        script(src='/js/jquery-2.1.3.min.js')
        script(src='/js/underscore.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/angular.min.js')
        script(src='/js/angular-route.js')
        script(src="/socket.io/socket.io.js")
        script(src='/js/chat.js')
    body.container-fluid(ng-controller="page")
        .row
            .head
                .headtext
                    |Welcome to Wonderland, {{user.nickname}}!
                    button.search(ng-click="Sch = 'vis'")
                        |Search
        .row
            .menuAll
                .menu.top
                a(href="home")
                    .menu.button
                        | Home page
                a(href="", ng-click="friends()")
                    .menu.button
                        |Friends
                a(href="", ng-click="chatrooms()")
                    .menu.button
                        |Chatrooms
                 a(href="", ng-click="alboms()")
                    .menu.button
                        |Alboms
                 a(href="", ng-click="news()")
                    .menu.button
                        |News
                .menu.bottom
            .center
                .center.topp
                .chats
                    .chat
                        .chatNames
                            .chatName(ng-repeat="name in chatroom" ng-click="active(chatroom[$index].name)")
                                |{{chatroom[$index].name}}
                        .chatArea
                            .message(ng-repeat="name in activechatroom.history")
                                .name
                                    |{{activechatroom.history[$index].name}}:
                                .text
                                    |{{activechatroom.history[$index].text}}
                        .chatInput
                            input.mess(ng-model="chatMessage" ng-keypress="$event.keyCode == 13 && send()")
                            button.s(ng-click="send()")
                                |Send
                .center.bot
            .avatarAll
                img.frame(src="/img/frame_avatar.png")
                .avatar
                    img(ng-src="{{user.avatar}}")
            .addNews.hidd(ng-class="add")
                input(type="text", class="form-control", rows="5", placeholder="Input your text...", ng-model='mess')
                button.btn.btn-default(ng-click="sendNews()")
                    | Submit
                button.btn.btn-default(ng-click="add='hidd'")
                    |Cancel
            .searchWindow.hidd(ng-class="Sch")
                .topText
                    |Input name for search
                input.input(type="text" ng-model="search")
                a(href='user/{{find[$index].name}}', ng-repeat="name in find")
                    .result
                        img.findAvatar(ng-src="{{find[$index].avatar}}")
                        |{{find[$index].name}}
                button.btn.btn-default(ng-click="_search()")
                    | OK
                button.btn.btn-default(ng-click="Sch='hidd'")
                    | Cancel