html(ng-app="home")
    head(lang='en')
        meta(charset='UTF-8')
        title
        link(rel='stylesheet', href='/css/home.css')
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/bootstrap-theme.css')
        script(src='/js/jquery-2.1.3.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/angular.min.js')
        script(src='/js/angular-route.js')
        script(src="/socket.io/socket.io.js")
        script(src='/js/home.js')
    body.container-fluid(ng-controller="page")
        .row
            .col-md-12.head
                .headtext
                    |Welcome to Wonderland, {{user.nickname}}!
        .row
            .menuAll
                .menu.top
                a(href="friends")
                    .menu.button
                        |Friends
                a(href="chat")
                    .menu.button
                        |Chatrooms
                 a(href="alboms")
                    .menu.button
                        |Alboms
                 a(href="news")
                    .menu.button
                        |News
                .menu.bottom
            .center
                .center.topp
                    button.added(ng-click="add='vis'")
                     |Add News
                .lenta
                    .block(ng-repeat="text in news")
                        .close.glyphicon.glyphicon-remove(ng-click="close(news[$index].id)")
                        .nick
                            |{{user.nickname}}:
                        br
                        .news
                            |{{news[$index].text}}
                        img.separator(src="/img/block_bot.png")
                .center.bot
            .avatarAll
                img.frame(src="/img/frame_avatar.png")
                .avatar
                    img(ng-src="{{user.avatar}}")
            .addNews.hidd(ng-class="add")
                    textarea(type="text", class="form-control", rows="5", placeholder="Input your text...", ng-model='mess')
                    button.btn.btn-default(ng-click="sendNews()")
                        | Submit
                    button.btn.btn-default(ng-click="add='hidd'")
                        |Cancel